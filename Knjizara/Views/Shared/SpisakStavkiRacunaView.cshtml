@using Knjizara.Models

<div class="panel panel-primary">
    <div class="panel-heading">Spisak stavki racuna @TempData["SifraRacun"]</div>
    <div class="panel-body">
        @if (TempData["SifraRacun"] != null && StavkaRacunZaposleni.PrikaziSveStavkeRacuna(Convert.ToInt32(TempData["SifraRacun"])).Count() != 0)
        {
            <table class="table table-condensed table-hover">
                <thead>
                <td>Sifra racuna</td>
                <td>Redni broj</td>
                <td>Artikal</td>
                <td>Kolicina</td>
                <td>Cena</td>
                </thead>
                <tbody>
                    @foreach (StavkaRacunViewModel stavka in StavkaRacunZaposleni.PrikaziSveStavkeRacuna(Convert.ToInt32(TempData["SifraRacun"])))
                    {
                        <tr>
                            <td>@stavka.Racun</td>
                            <td>@stavka.RedniBroj</td>
                            <td>@stavka.Artikal</td>
                            <td>@stavka.Kolicina</td>
                            <td>@stavka.Cena</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <table class="table table-condensed table-hover">
                <thead>Trenutno nema stavki racuna</thead>
            </table>
        }
    </div>
</div>